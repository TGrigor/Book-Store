@model Domein.Book

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">                
        <dd>
        @if (Model.Picture != null)
        {
            @*<img src="data:image/png;base64,@Convert.ToBase64String(Model.Picture)" , style="width:20%;" />*@
            <img src="~/Picture/@Model.Picture" style="width:30%;" />
        }
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        <br />
        <dt>
            @*@Html.DisplayNameFor(model => model.Author.AuthorName)*@
            Author Name
        </dt>

        <dd>
           <div class="container" style="margin-left: -15px;">
                <!-- Trigger the modal with a button -->
                <a data-toggle="modal" data-target="#myModal"><p>@Html.DisplayFor(model => model.Author.FullName)</p></a>

                <!-- Modal -->
                <div class="modal fade" id="myModal" role="dialog" style="background: rgba(0, 0, 0, 0.901961);">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="container body-content" style="width: 661px; background-color: white;">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Author</h4>
                            </div>
                            <div class="modal-body">
                                <div>                                    
                                    <dl class="dl-horizontal" style="font-size:10px;">
                                        <dd>
                                            @if (Model.Picture != null)
                                            {
                                                <img src="data:image/png;base64,@Convert.ToBase64String(Model.Author.Picture)" , style="width:40%;" />//Author                                               

                                            }
                                        </dd>                                       
                                       
                                        <dd>
                                            @Html.DisplayFor(model => model.Author.AuthorName)
                                        </dd>
                                      
                                        <dd>
                                            @Html.DisplayFor(model => model.Author.AuthorLastName)
                                        </dd>
                                        </br>
                                        <dd>
                                            @Html.DisplayFor(model => model.Author.BirthDay)
                                        </dd>
                                    </dl>
                                    </br></br>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>            
        </dd>

        <br />
        <dt>
            @*@Html.DisplayNameFor(model => model.Country.CountryName)*@
            Country
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Country.CountryName)
        </dd>
        <br />
        <dt>
            @*@Html.DisplayNameFor(model => model.PagesCount)*@
            Pages Count
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PagesCount)
        </dd>
        <br/>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        @*<dt>
            Attribute
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BookAddAttributes)
        </dd>*@

        <dt>
            @if (Model.BookAddAttributes != null)
            {
                foreach (var item in Model.BookAddAttributes)
                {
                    @item.ExtraAttribute.Name
                }
            }
        </dt>
        <dd>
            @{
                var extAtt = Model.BookAddAttributes.FirstOrDefault();
                if (extAtt != null)
                {
                    @extAtt.ValueTypeText

                    @extAtt.ValueTypeDate
                }
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.BookID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
