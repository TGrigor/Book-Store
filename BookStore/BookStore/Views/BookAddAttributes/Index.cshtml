@model IEnumerable<Domein.BookAddAttribute>

@{
    ViewBag.Title = "Index";
}

<h2>Book and Attributes</h2>


<table class="table">
    <tr>        
        <th>
            @Html.DisplayNameFor(model => model.Book.Title)
        </th>
        <th>
            Attribute
        </th>        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>       
        <td>
            @Html.DisplayFor(modelItem => item.Book.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExtraAttribute.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BookAddAttributesID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BookAddAttributesID })
        </td>
    </tr>
}

</table>
